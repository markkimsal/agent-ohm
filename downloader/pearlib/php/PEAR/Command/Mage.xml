<commands version="1.0">
 <mage-package>
  <summary>Build Magento Package</summary>
  <function>doPackage</function>
  <shortcut>mp</shortcut>
  <options>
   <targetdir>
    <shortopt>T</shortopt>
    <doc>Target directory for package file.</doc>
    <arg>TARGETDIR</arg>
   </targetdir>
  </options>

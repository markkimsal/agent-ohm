<config>
    <modules>
        <Mage_Ideal>
            <version>0.1.0</version>
        </Mage_Ideal>
    </modules>
    <global>
        <models>
            <ideal>
                <class>Mage_Ideal_Model</class>
                <resourceModel>ideal_mysql4</resourceModel>
            </ideal>
            <ideal_mysql4>
                <class>Mage_Ideal_Model_Mysql4</class>
                <entities>
                    <api_debug><table>ideal_api_debug</table></api_debug>
                </entities>
            </ideal_mysql4>
        </models>
        <resources>
            <ideal_setup>
                <setup>
                    <module>Mage_Ideal</module>
                    <class>Mage_Ideal_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ideal_setup>
            <ideal_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ideal_write>
            <ideal_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ideal_read>
        </resources>
        <blocks>
            <ideal><class>Mage_Ideal_Block</class></ideal>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <ideal_advanced>/ideal/advanced</ideal_advanced>
            <ideal_basic>/ideal/basic</ideal_basic>
        </secure_url>
        <routers>
            <ideal>
                <use>standard</use>
                <args>
                    <module>Mage_Ideal</module>
                    <frontName>ideal</frontName>
                </args>
            </ideal>
        </routers>
        <translate>
            <modules>
                <Mage_Ideal>
                    <files>
                        <default>Mage_Ideal.csv</default>
                    </files>
                </Mage_Ideal>
            </modules>
        </translate>
        <layout>
            <updates>
                <ideal>
                    <file>ideal.xml</file>
                </ideal>
            </updates>
        </layout>
        <events>
            <sales_convert_quote_payment_to_order_payment>
                <observers>
                    <ideal_advanced_observer>
                        <type>singleton</type>
                        <class>ideal/observer</class>
                        <method>convertPayment</method>
                    </ideal_advanced_observer>
                </observers>
            </sales_convert_quote_payment_to_order_payment>
        </events>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Ideal>
                    <files>
                        <default>Mage_Ideal.csv</default>
                    </files>
                </Mage_Ideal>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <ideal_basic>
                  <model>ideal/basic</model>
                  <title>iDEAL Basic</title>
                  <allowspecific>0</allowspecific>
            </ideal_basic>
            <ideal_advanced>
                  <model>ideal/advanced</model>
                  <title>iDEAL Advanced</title>
                  <allowspecific>0</allowspecific>
                  <expire_period>10</expire_period>
                  <cron_start>1</cron_start>
                  <cron_end>1</cron_end>
            </ideal_advanced>
        </payment>
    </default>
    <crontab>
        <jobs>
            <trasaction_status_check>
                <schedule><cron_expr>0 */1 * * *</cron_expr></schedule>
                <run><model>ideal/advanced::transactionStatusCheck</model></run>
            </trasaction_status_check>
        </jobs>
    </crontab>
</config>

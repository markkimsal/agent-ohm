<config>
    <modules>
        <Mage_Rule>
            <version>0.7.0</version>
        </Mage_Rule>
    </modules>
    <global>
        <models>
            <rule>
                <class>Mage_Rule_Model</class>
                <resourceModel>rule_mysql4</resourceModel>
            </rule>
            <rule_mysql4>
                <class>Mage_Rule_Model_Mysql4</class>
            </rule_mysql4>
        </models>
        <blocks>
                <rule>
                    <class>Mage_Rule_Block</class>
                </rule>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Rule>
                    <files>
                        <default>Mage_Rule.csv</default>
                    </files>
                </Mage_Rule>
            </modules>
        </translate>
    </adminhtml>
    
    <frontend>
        <translate>
            <modules>
                <Mage_Rule>
                    <files>
                        <default>Mage_Rule.csv</default>
                    </files>
                </Mage_Rule>
            </modules>
        </translate>
    </frontend>
</config>
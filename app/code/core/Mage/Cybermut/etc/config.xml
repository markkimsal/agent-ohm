<config>
    <modules>
        <Mage_Cybermut>
            <version>0.1.0</version>
        </Mage_Cybermut>
    </modules>
    <global>
        <models>
            <cybermut>
                <class>Mage_Cybermut_Model</class>
                <resourceModel>cybermut_mysql4</resourceModel>
            </cybermut>
            <cybermut_mysql4>
                <class>Mage_Cybermut_Model_Mysql4</class>
                <entities>
                    <api_debug><table>cybermut_api_debug</table></api_debug>
                </entities>
            </cybermut_mysql4>
        </models>
        <resources>
            <cybermut_setup>
                <setup>
                    <module>Mage_Cybermut</module>
                    <class>Mage_Cybermut_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cybermut_setup>
            <cybermut_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cybermut_write>
            <cybermut_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cybermut_read>
        </resources>
        <blocks>
            <cybermut><class>Mage_Cybermut_Block</class></cybermut>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <cybermut_payment>/cybermut/payment</cybermut_payment>
        </secure_url>
        <routers>
            <cybermut>
                <use>standard</use>
                <args>
                    <module>Mage_Cybermut</module>
                    <frontName>cybermut</frontName>
                </args>
            </cybermut>
        </routers>
        <translate>
            <modules>
                <Mage_Cybermut>
                    <files>
                        <default>Mage_Cybermut.csv</default>
                    </files>
                </Mage_Cybermut>
            </modules>
        </translate>
        <layout>
            <updates>
                <cybermut>
                    <file>cybermut.xml</file>
                </cybermut>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Cybermut>
                    <files>
                        <default>Mage_Cybermut.csv</default>
                    </files>
                </Mage_Cybermut>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <cybermut_payment>
                  <model>cybermut/payment</model>
                  <title>CyberMUT-P@iement</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
            </cybermut_payment>
        </payment>
    </default>
</config>
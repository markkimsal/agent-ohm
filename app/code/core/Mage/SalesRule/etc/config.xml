<config>
    <modules>
        <Mage_SalesRule>
            <version>0.7.7</version>
        </Mage_SalesRule>
    </modules>
    <global>
        <helpers>
            <salesrule>
                <class>Mage_SalesRule_Helper</class>
            </salesrule>
        </helpers>
        <models>
            <salesrule>
                <class>Mage_SalesRule_Model</class>
                <resourceModel>salesrule_mysql4</resourceModel>
            </salesrule>
            <salesrule_mysql4>
                <class>Mage_SalesRule_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>salesrule</table>
                    </rule>
                    <rule_customer>
                        <table>salesrule_customer</table>
                    </rule_customer>
                </entities>
            </salesrule_mysql4>
        </models>
        <resources>
            <salesrule_setup>
                <setup>
                    <module>Mage_SalesRule</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesrule_setup>
            <salesrule_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesrule_write>
            <salesrule_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesrule_read>
        </resources>

        <events>
            <sales_quote_address_discount_item>
                <observers>
                    <salesrule>
                        <type>singleton</type>
                        <class>salesrule/observer</class>
                        <method>sales_quote_address_discount_item</method>
                    </salesrule>
                </observers>
            </sales_quote_address_discount_item>
            <sales_order_place_after>
                <observers>
                    <salesrule>
                        <type>singleton</type>
                        <class>salesrule/observer</class>
                        <method>sales_order_afterPlace</method>
                    </salesrule>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <adminhtml>
        <menu>
             <promo>
                <children>
                    <quote translate="title" module="salesrule">
                        <title>Shopping Cart Price Rules</title>
                        <action>adminhtml/promo_quote/</action>
                        <resource>promo/quote</resource>
                        <depends><module>Mage_Sales</module></depends>
                    </quote>
                </children>
             </promo>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <promo>
                            <children>
                                <quote translate="title" module="salesrule">
                                    <title>Shopping Cart Price Rules</title>
                                </quote>
                            </children>
                        </promo>
                    </children>
                </admin>
            </resources>
         </acl>
        <translate>
            <modules>
                <Mage_SalesRule>
                    <files>
                        <default>Mage_SalesRule.csv</default>
                    </files>
                </Mage_SalesRule>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <translate>
            <modules>
                <Mage_SalesRule>
                    <files>
                        <default>Mage_SalesRule.csv</default>
                    </files>
                </Mage_SalesRule>
            </modules>
        </translate>
    </frontend>
</config>

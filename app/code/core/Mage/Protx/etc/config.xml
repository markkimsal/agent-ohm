<config>
    <modules>
        <Mage_Protx>
            <version>0.1.0</version>
        </Mage_Protx>
    </modules>
    <global>
        <models>
            <protx>
                <class>Mage_Protx_Model</class>
                <resourceModel>protx_mysql4</resourceModel>
            </protx>
            <protx_mysql4>
                <class>Mage_Protx_Model_Mysql4</class>
                <entities>
                    <api_debug><table>protx_api_debug</table></api_debug>
                </entities>
            </protx_mysql4>
        </models>
        <resources>
            <protx_setup>
                <setup>
                    <module>Mage_Protx</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </protx_setup>
            <protx_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </protx_write>
            <protx_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </protx_read>
        </resources>
        <blocks>
            <protx><class>Mage_Protx_Block</class></protx>
        </blocks>
    </global>
    <frontend>
        <secure_url>
            <protx_standard>/protx/standard</protx_standard>
        </secure_url>
        <routers>
            <protx>
                <use>standard</use>
                <args>
                    <module>Mage_Protx</module>
                    <frontName>protx</frontName>
                </args>
            </protx>
        </routers>
        <translate>
            <modules>
                <Mage_Protx>
                    <files>
                        <default>Mage_Protx.csv</default>
                    </files>
                </Mage_Protx>
            </modules>
        </translate>
        <layout>
            <updates>
                <protx>
                    <file>protx.xml</file>
                </protx>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Protx>
                    <files>
                        <default>Mage_Protx.csv</default>
                    </files>
                </Mage_Protx>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <protx_standard>
                <payment_action>Payment</payment_action>
                <model>protx/standard</model>
                <title>Protx Standard</title>
                <allowspecific>0</allowspecific>
            </protx_standard>
        </payment>
    </default>
</config>

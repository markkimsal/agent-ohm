<?php $_oscOrders = $this->getOsCommerceOrders(); ?>
<?php if(sizeof($_oscOrders)) :?>
<div class="page-head">
   <h3><?php echo $this->__('My Previous Orders') ?></h3>
</div>
<table cellspacing="0" class="data-table" id="my-orders-table">
    <thead>
        <tr>
            <th><?php echo $this->__('Order #') ?></th>
            <th><?php echo $this->__('Date') ?></th>
            <th><?php echo $this->__('Ship to') ?></th>
            <th><?php echo $this->__('Order Total') ?></th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        <?php $_odd = ''; ?>
        <?php foreach ($_oscOrders as $_oscOrder): ?>
            <tr>
                <td><?php echo $_oscOrder['orders_id'] ?></td>
                <td><?php echo $this->formatDate($_oscOrder['date_purchased'], 'medium', true) ?></td>
                <td><?php echo $this->htmlEscape($_oscOrder['delivery_street_address']) ?></td>
                <td><?php echo ($_oscOrder['currency_symbol']?$_oscOrder['currency_symbol']:$_oscOrder['currency']).' '.number_format($_oscOrder['value'],2) ?></td>
                <td class="a-center"><a href="<?php echo $this->getViewOscommerceUrl($_oscOrder) ?>"><?php echo $this->__('View Order') ?></a>
                </td>
            </tr>
        <?php endforeach; ?>
    </tbody>
</table>
<?php endif; ?>

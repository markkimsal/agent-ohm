                                            <title>Abandoned carts</title>
                                        </abandoned>
                                    </children>
                                </shopcart>
                                <products translate="title">
                                    <title>Products</title>
                                    <children>
                                        <ordered translate="title">
                                            <title>Bestsellers</title>
                                        </ordered>
                                        <viewed translate="title">

                                        </totals>
                                        <orders translate="title">
                                            <title>Customers by number of orders</title>
                                        </orders>
                                    </children>
                                </customers>
                                <review translate="title" module="catalog">
                                    <title>Reviews</title>
                                    <children>
                                        <customer translate="title">
                                            <title>Customers Reviews</title>

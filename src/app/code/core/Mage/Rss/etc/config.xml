<config>
   <modules>
      <Mage_Rss>
         <version>0.8.0</version>
      </Mage_Rss>
   </modules>
   <global>
      <models>
         <rss>
            <class>Mage_Rss_Model</class>
            <resourceModel>rss_mysql4</resourceModel>
         </rss>
         <rss_mysql4>
            <class>Mage_Rss_Model_Mysql4</class>
         </rss_mysql4>
      </models>
      <blocks>
         <rss><class>Mage_Rss_Block</class></rss>
      </blocks>
   </global>

   <admin>
      <routers>
         <rss>
            <use>admin</use>
            <args>
               <module>Mage_Rss</module>
               <frontName>rss</frontName>
            </args>
         </rss>
      </routers>
    </admin>

    <adminhtml>
        <translate>
            <modules>
                <Mage_Rss>
                    <files>
                        <default>Mage_Rss.csv</default>
                    </files>
                </Mage_Rss>
            </modules>
        </translate>
        <layout>
          <updates>
              <rss>
                  <file>rss.xml</file>
              </rss>
          </updates>
      </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <rss translate="title">
                                            <title>Rss Feeds Section</title>
                                            <sort_order>135</sort_order>
                                        </rss>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <translate>
            <modules>
                <Mage_Rss>
                    <files>
                        <default>Mage_Rss.csv</default>
                    </files>
                </Mage_Rss>
            </modules>
        </translate>
      <secure_url>
          <rss_catalog_review>/rss/catalog/review</rss_catalog_review>
           <rss_order_new>/rss/catalog/review</rss_order_new>
      </secure_url>
      <routers>
         <rss>
            <use>standard</use>
            <args>
               <module>Mage_Rss</module>
               <frontName>rss</frontName>
            </args>
         </rss>
      </routers>
      <layout>
              <updates>
                  <rss>
                      <file>rss.xml</file>
                  </rss>
              </updates>
          </layout>
   </frontend>
</config>
